pipeline {
    agent any

    stages {
        stage('Pull the Git Hub Repository') {
            steps {
                git branch: 'main', credentialsId: 'Appalanaidu799', url: 'https://github.com/Appalanaidu799/sir-assignment.git'
            }
        }
        stage('compile the code'){
            steps{
                sh 'mvn compile'
            }
        }
        stage('Test the code'){
            steps{
                sh 'mvn test'
            }
        }
        stage('Qa the code'){
            steps{
                sh 'mvn pmd:pmd'
            }
        }
    }
}
